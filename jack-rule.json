{
    "title": "babyking's karabienr rules http://babyking.github.io/KarabinerConfiguration/)",
    "rules": [
        
        {
            "description": "[光标定位]外置键盘,left_control+[wasd(方向),np(翻页),o(退格)] Shift+Enter(换行)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "o",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": {
                        "key_code": "delete_or_backspace"
                    },
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "a",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": {
                        "key_code": "left_arrow"
                    },
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "s",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": {
                        "key_code": "down_arrow"
                    },
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "w",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": {
                        "key_code": "up_arrow"
                    },
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "d",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": {
                        "key_code": "right_arrow"
                    },
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "q",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": {
                        "key_code": "page_up"
                    },
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "r",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": {
                        "key_code": "page_down"
                    },
                    "type": "basic"
                }
            ]
        },
        {
            "description": "[单击]shift切换输入法",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_shift"
                    },
                    "to": [
                        {
                            "key_code": "left_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "0",
                            "modifiers": [
                                "left_control",
                                "left_option",
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "right_shift"
                    },
                    "to": [
                        {
                            "key_code": "right_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "0",
                            "modifiers": [
                                "left_control",
                                "left_option",
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "[双击]⌘,切换任务(⌘+tab)",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "name": "command pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "left_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "tab",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "command pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "tab",
                            "modifiers": [
                                "right_command"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "left_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "command pressed",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_canceled": [
                            {
                                "set_variable": {
                                    "name": "command pressed",
                                    "value": 0
                                }
                            }
                        ],
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "command pressed",
                                    "value": 0
                                }
                            }
                        ]
                    },
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "command pressed",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "right_command"
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_canceled": [
                            {
                                "set_variable": {
                                    "name": "command pressed",
                                    "value": 0
                                }
                            }
                        ],
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "command pressed",
                                    "value": 0
                                }
                            }
                        ]
                    },
                    "type": "basic"
                }
            ]
        },
        {
            "description": "[长按]x,c,v = cut,copy,past",
            "manipulators": [
                {
                    "from": {
                        "key_code": "x"
                    },
                    "to_delayed_action": {
                        "to_if_canceled": [
                            {
                                "key_code": "x"
                            }
                        ]
                    },
                    "to_if_alone": [
                        {
                            "halt": true,
                            "key_code": "x"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "x",
                            "modifiers": [
                                "left_command"
                            ],
                            "repeat": false
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "c"
                    },
                    "to_delayed_action": {
                        "to_if_canceled": [
                            {
                                "key_code": "c"
                            }
                        ]
                    },
                    "to_if_alone": [
                        {
                            "halt": true,
                            "key_code": "c"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "c",
                            "modifiers": [
                                "left_command"
                            ],
                            "repeat": false
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "v"
                    },
                    "to_delayed_action": {
                        "to_if_canceled": [
                            {
                                "key_code": "v"
                            }
                        ]
                    },
                    "to_if_alone": [
                        {
                            "halt": true,
                            "key_code": "v"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "v",
                            "modifiers": [
                                "left_command"
                            ],
                            "repeat": false
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "[长按]capslock = right_control, 单击 = escape",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "key_code": "right_control"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "[长按]空格键 = shfit,单击映射至空格键",
            "manipulators": [
                {
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
