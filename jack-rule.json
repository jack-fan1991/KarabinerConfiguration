{
  "title": "karabienr rules http://jack-fan1991.github.io/KarabinerConfiguration/)",
  "rules": [
    {
      "description": "[单击]shift切换输入法",
      "manipulators": [
        {
          "from": {
            "key_code": "left_shift"
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "0",
              "modifiers": [
                "left_control",
                "left_option",
                "left_command"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "right_shift"
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "0",
              "modifiers": [
                "left_control",
                "left_option",
                "left_command"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Map Page Up to Command+.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "page_up"
          },
          "to": [
            {
              "key_code": "period",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "[长按]button4 as vsCode quickfix,long press as button4",
      "manipulators": [
        {
          "from": {
            "pointing_button": "button4"
          },
          "to_if_alone": [
            {
              "halt": true,
              "pointing_button": "button4"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "period",
              "modifiers": [
                "left_command"
              ],
              "repeat": false
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
